{

  "manifest_version": 2,
  "name": "Verknüpfungen zum digitalen Wörterbuch der deutschen Sprache",
  "description": "Fügt Verknüpfungen zum Wörterbuchportal dwds.de zur Browserumgebung hinzu.",
  "version": "0.1",
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "63.0b14"
    }
  },

  "icons": {
    "16": "icons/favicon-16.png",
    "32": "icons/favicon-32.png",
    "48": "icons/favicon-48.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "menus",
    "search"
  ],

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "DWDS",
      "search_url": "https://www.dwds.de/wb/{searchTerms}",
      "keyword": "dwds",
      "favicon_url": "https://www.dwds.de/favicon-16x16.png",
      "is_default": false,
      "encoding": "UTF-8"
    }
  },

  "incognito": "spanning",

  "author": "Adrien Barbaresi",
  "homepage_url": "https://github.com/adbar/dwds-addon"

}